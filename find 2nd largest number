#include<iostream>
using namespace std;
 main()
 {
 	int ar[]={4, 2 ,5 ,6,1};
 	int *ptr;
 	ptr=ar;
 	int max,smax;
 	max=*ptr;
 	for(int i=0;i<5;i++)
	{
	 
 		if(max<*ptr)
 		{
 			smax=max;
			 max=*ptr;	
		}
		ptr++;
	}
	cout<<"largest element in array is "<<max;
	cout<<endl<<"2nd largest elemrnt in arrray is "<<smax;
 
